{
    "timeout": 15,
    "threads": "max",
    "source": {
        "directories": [
            "src"
        ]
    },
    "timeoutsAsEscaped": true,
    "minMsi": 100,
    "minCoveredMsi": 100,
    "mutators": {
        "global-ignoreSourceCodeByRegex": [
            "assert.*"
        ],
        "@default": true,
        "NotIdenticalNotEqual": false,
        "DecrementInteger": false,
        "ReturnRemoval": false,
        "LessThan": {
            "ignore": [
                "Pipeline\\Helper\\RunningVariance"
            ]
        },
        "GreaterThan": {
            "ignore": [
                "Pipeline\\Helper\\RunningVariance"
            ]
        }
    }
}
