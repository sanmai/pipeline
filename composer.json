{
    "name": "sanmai/pipeline",
    "type": "library",
    "description": "General-purpose collections pipeline",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Alexey Kopytko",
            "email": "alexey@kopytko.com"
        }
    ],
    "require": {
        "php": ">=7"
    },
    "require-dev": {
        "codacy/coverage": "^1.4",
        "friendsofphp/php-cs-fixer": "^2.11",
        "infection/infection": ">=0.15",
        "league/pipeline": "^1.0 || ^0.3",
        "mockery/mockery": "^1.0",
        "phan/phan": ">=1.1",
        "php-coveralls/php-coveralls": "^2.0",
        "phpstan/phpstan": ">=0.9",
        "phpunit/phpunit": "^6 || ^7",
        "vimeo/psalm": ">=2.0"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.x-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Pipeline\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Pipeline\\": "tests/",
            "Pipeline\\": "tests/"
        }
    }
}
